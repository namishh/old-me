---
import Layout from "../layouts/Layout.astro";
let allPosts = await Astro.glob("../blogs/*.mdx");
let blogs = allPosts.sort(
    (a, b) =>
        new Date(b.frontmatter.date).valueOf() -
        new Date(a.frontmatter.date).valueOf(),
);
let a = [blogs[0], blogs[1], blogs[2], blogs[3]];
---

<Layout title="nam" description="nam's personal website and blog.">
    <div class="w-full flex justify-center md:py-8 flex-col items-center gap-2">
        <div class="md:w-2/3 py-4 px-4 w-full lg:w-1/2 flex-col">
            <div class="flex gap-4 items-center">
                <img
                    src="https://avatars.githubusercontent.com/u/68964499?v=4"
                    alt="pfp"
                    class="h-12 w-12 rounded-full border-[1px] border-fg"
                />
                <h1 class="text-3xl text-left text-fg self-end">Namish</h1>
                <h1 class="text-lg text-gray-500 text-left self-end">
                    16M (he/him)
                </h1>
            </div>
            <p class="mt-8 text-[18px] md:text-[20px] text-bright">
                Hello! I am Namish, you can call me <i class="text-fg">nam</i> or
                refer me via my internet alias, <i class="text-fg">chadcat7</i>.
            </p>
            <p class="mt-4 text-[18px] md:text-[20px] text-bright">
                An above average programmer. Likes minimalism, <span
                    class="text-fg">neovim</span
                >, <span class="text-fg">arch</span> and <span class="text-fg"
                    >nixos</span
                >. Kinda good in <span class="text-fg">ricing</span>, <span
                    class="text-fg">designing</span
                > and <span class="text-fg">front end development</span>.
                Getting into low level languages slowly. Writes <span
                    ><a href="/poems" class="text-fg underline">poems</a></span
                > and <span
                    ><a href="/blog" class="text-fg underline">blogs</a></span
                > in my free time.
            </p>
            <p class="mt-2 text-[18px] md:text-[20px] text-bright">
                Head of Systems in my school club.
            </p>
            <div class="my-8 h-[2px] px-16 bg-bg3 inline-block"></div>
            <h1 class="text-xl md:text-2xl text-fg">
                <span class="text-gray-500">(Some of my)</span> Projects <a
                    href="/stuff"
                    ><i class="ph ml-2 ph-arrow-right text-sm"></i></a
                >
            </h1>

            <p class="mt-2 text-[18px] md:text-[20px] text-bright">
                Here are some projects worth showing. You can find all of them <a
                    href="/stuff"
                    class="text-fg underline">here.</a
                >
            </p>
            <div
                class="cardscontainer mt-4 flex flex-wrap w-full justify-center"
            >
                <div class="project py-2 px-0 md:px-2 text-fg w-full md:w-1/3">
                    <a href="https://github.com/chadcat7/linear">
                        <div class="rounded-xl bg-mbg p-4">
                            <div class="text-lg font-mono">shawty</div>
                            <div class="text-bright text-md">
                                a url shortner written purely in C and htmx (0
                                js)
                            </div>
                            <p class="text-md text-gray-500">c ⋅ htmx</p>
                        </div>
                    </a>
                </div>
                <div class="project px-0 md:px-2 py-2 text-fg w-full md:w-1/3">
                    <a href="https://github.com/chadcat7/lovbyte">
                        <div class="rounded-xl bg-mbg p-4">
                            <div class="text-lg font-mono">lovbyte</div>
                            <div class="text-bright text-md">
                                dating app for "coders" to finally get them a
                                partner
                            </div>
                            <p class="text-md text-gray-500">
                                typescript ⋅ remix ⋅ prisma
                            </p>
                        </div>
                    </a>
                </div>
                <div class="project px-0 md:px-2 py-2 text-fg w-full md:w-1/3">
                    <a href="https://github.com/chadcat7/prism">
                        <div class="rounded-xl bg-mbg p-4">
                            <div class="text-lg font-mono">neuing</div>
                            <div class="text-bright text-md">
                                simulating a neural network from scratch with
                                test data
                            </div>
                            <p class="text-md text-gray-500">golang ⋅ maths</p>
                        </div>
                    </a>
                </div>
            </div>
            <h1 class="text-xl lg:text-2xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Recent</span> Blogs <a href="/blog"
                    ><i class="ph ml-2 ph-arrow-right text-sm"></i></a
                >
            </h1>
            <ul class="list-inside">
                {
                    a.map((i, j) => {
                        return (
                            <li class="cursor-pointer my-6 w-full">
                                <a
                                    class="flex justify-between w-full"
                                    href={`/blog/${i.file.split("/").pop().split(".").shift()}`}
                                >
                                    <p class="text-fg text-[18px] md:text-[20px]">
                                        {j + 1}. {i.frontmatter.title}
                                    </p>
                                    <span class="mr-2 text-lg text-gray-500">
                                        {i.frontmatter.date}
                                    </span>
                                </a>
                            </li>
                        );
                    })
                }
            </ul>
            <div class="my-8 h-[2px] px-16 bg-bg3 inline-block"></div>
            <p class="text-[18px] md:text-[20px] text-bright">
                I am online at <a
                    target="_blank"
                    href="https://discord.com/users/715825910611443722"
                    class="text-fg underline">discord</a
                >
                , <a
                    href="https://reddit.com/u/ChadCat5207"
                    target="_blank"
                    class="text-fg underline">reddit</a
                > and <a
                    target="_blank"
                    href="https://github.com/namishh"
                    class="text-fg underline">github</a
                >. Recently made a twitter account <a
                    target="_blank"
                    href="https://twitter.com/namishdev"
                    class="text-fg underline">@namishdev</a
                >.<br />
                You can also contact me via my mail address <span
                    class="text-fg">namish@tuta.io</span
                >. Anyways here are some of my cool friends, do give them a
                follow.
                <div class="flex gap-[6px] my-4">
                    <a href="https://github.com/ni5arga" target="_blank"
                        ><img
                            class="rounded-full h-8"
                            src="https://avatars.githubusercontent.com/u/45588772?v=4"
                            alt="ni5arga"
                        /></a
                    >
                    <a href="https://github.com/dharmx" target="_blank"
                        ><img
                            class="rounded-full h-8"
                            src="https://avatars.githubusercontent.com/u/80379926?v=4"
                            alt="dharmx"
                        /></a
                    >
                    <a href="https://github.com/nermalcat69" target="_blank"
                        ><img
                            class="rounded-full h-8"
                            src="https://avatars.githubusercontent.com/u/73933669?v=4"
                            alt="nermal"
                        /></a
                    >
                    <a href="https://github.com/Darkkal44" target="_blank"
                        ><img
                            class="rounded-full h-8"
                            src="https://avatars.githubusercontent.com/u/91195954?v=4"
                            alt="Darkkal44"
                        /></a
                    >
                    <a href="https://github.com/DitherWither" target="_blank"
                        ><img
                            class="rounded-full h-8"
                            src="https://avatars.githubusercontent.com/u/65118061?v=4"
                            alt="dither"
                        /></a
                    >
                </div>
            </p>
        </div>
    </div>
</Layout>
